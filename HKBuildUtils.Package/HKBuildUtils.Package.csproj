<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>HKBuildUtils</PackageId>
    <Version>0.2.0</Version>
    <IsPackable>true</IsPackable>
    <Title>Hollow Knight Modding Build Utils</Title>
    <Authors>HKLab</Authors>
    <GenerateDependencyFile>false</GenerateDependencyFile>
    <Description>
      A nuget package to help make the Hollow Knight Mod
    </Description>
    <PackageTags>HollowKnight;HollowKnightMod;HKMirror</PackageTags>
    <TargetsForTfmSpecificBuildOutput>
      $(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage
    </TargetsForTfmSpecificBuildOutput>
    <NoWarn>NU5100</NoWarn>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/HKLab/HKBuildUtils</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <DevelopmentDependency>true</DevelopmentDependency>

    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);_AddAnalyzersToOutput</TargetsForTfmSpecificContentInPackage>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="build\HKBuildUtils.props" />
    <None Remove="build\HKBuildUtils.targets" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="build\HKBuildUtils.props">
      <PackagePath>build\</PackagePath>
    </Content>
    <Content Include="build\HKBuildUtils.targets">
      <PackagePath>build\</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Link="README.md">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HKBuildUtils\HKBuildUtils.csproj" />
  </ItemGroup>

  <Target Name="_AddAnalyzersToOutput">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(OutputPath)\*.dll;$(OutputPath)\*.exe" PackagePath="analyzers/dotnet/cs" />
      <TfmSpecificPackageFile Include="..\HKBuildUtils\bin\Debug\netstandard2.0\HKBuildUtils.Main.deps.json" PackagePath="analyzers/dotnet/cs" />
    </ItemGroup>
  </Target>

</Project>
